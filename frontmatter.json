{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.preview.trailingSlash": true,
  "frontMatter.website.host": "https://navendu.me",
  "frontMatter.taxonomy.alignFilename": true,
  "frontMatter.panel.actions.disabled": [
    "createContent"
  ],
  "frontMatter.git.disableOnBranches": [
    "hugo"
  ],
  "frontMatter.taxonomy.customTaxonomy": [
    {
      "id": "series",
      "options": [
        "Hands-On With Apache APISIX Ingress"
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "Post (default)",
      "pageBundle": false,
      "filePrefix": "",
      "slugTemplate": "{{seoTitle}}",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "default": "{{slug}}"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Draft?",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Table of contents (ToC)",
          "name": "toc",
          "type": "fields",
          "fields": [
            {
              "title": "Show ToC?",
              "name": "show",
              "type": "boolean",
              "default": false
            },
            {
              "title": "Open ToC?",
              "name": "open",
              "type": "boolean",
              "default": false,
              "when": {
                "fieldRef": "show",
                "operator": "eq",
                "value": true
              }
            }
          ]
        },
        {
          "title": "Show related content?",
          "name": "ShowRelatedContent",
          "type": "boolean"
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Series",
          "name": "series",
          "type": "taxonomy",
          "taxonomyId": "series"
        },
        {
          "title": "Aliases",
          "name": "aliases",
          "type": "list"
        },
        {
          "title": "Cover",
          "name": "cover",
          "type": "fields",
          "fields": [
            {
              "title": "Image",
              "name": "image",
              "type": "image",
              "isPreviewImage": true
            },
            {
              "title": "Alt text",
              "name": "alt",
              "type": "string"
            },
            {
              "title": "Caption",
              "name": "caption",
              "type": "string",
              "single": true
            },
            {
              "title": "Relative?",
              "name": "relative",
              "type": "boolean",
              "default": "true"
            }
          ]
        }
      ]
    },
    {
      "name": "Daily",
      "pageBundle": false,
      "filePrefix": "{{date|dd-M-yy}}",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true,
          "actions": [
            {
              "title": "Add log number",
              "script": "./scripts/frontmatter/daily-logs-title.js"
            }
          ]
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "daily-theme",
          "hidden": true,
          "required": true
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Draft?",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "default": [
            "daily log"
          ]
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories",
          "default": "Daily Dose of Pottekkat"
        }
      ]
    },
    {
      "name": "Newsletter",
      "pageBundle": false,
      "filePrefix": "nl",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "newsletter-theme",
          "hidden": true,
          "required": false
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Draft?",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Show ToC?",
          "name": "ShowToc",
          "type": "boolean",
          "default": true,
          "hidden": true
        },
        {
          "title": "Open ToC?",
          "name": "TocOpen",
          "type": "boolean",
          "default": true,
          "hidden": true
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "default": [
            "newsletter"
          ]
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories",
          "default": "Newsletter"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "Posts",
      "path": "[[workspace]]/content/posts",
      "previewPath": "posts",
      "contentTypes": [
        "Post (default)"
      ]
    },
    {
      "title": "Dailies",
      "path": "[[workspace]]/content/daily",
      "previewPath": "daily",
      "contentTypes": [
        "Daily"
      ]
    },
    {
      "title": "Newsletters",
      "path": "[[workspace]]/content/newsletter",
      "previewPath": "newsletter",
      "contentTypes": [
        "Newsletter"
      ]
    }
  ],
  "frontMatter.dashboard.content.card.fields.description": "summary",
  "frontMatter.custom.scripts": [
    {
      "id": "create-image-folder",
      "title": "Create image folder",
      "script": "./scripts/frontmatter/create-image-folder.js"
    }
  ],
  "frontMatter.extensibility.scripts": [
    "./.frontmatter/ui/external.js"
  ],
  "frontMatter.snippets.wrapper.enabled": false,
  "frontMatter.content.snippets": {
    "Figure": {
      "description": "Figure with title, caption, and link.",
      "body": "{{< figure src=\"[[&mediaUrl]]#center\" title=\"[[title]]\" caption=\"[[caption]]\" link=\"[[&mediaUrl]]\" target=\"_blank\" class=\"align-center\" >}}",
      "isMediaSnippet": true
    },
    "Quote": {
      "description": "Quote with the author, link, and title.",
      "body": [
        "{{< blockquote author=\"[[author]]\" link=\"[[&link]]\" title=\"[[title]]\" >}}",
        "[[selection]]",
        "{{< /blockquote >}}"
      ],
      "fields": [
        {
          "name": "author",
          "title": "Author",
          "type": "string",
          "single": true
        },
        {
          "name": "title",
          "title": "Title",
          "type": "string",
          "single": true
        },
        {
          "name": "link",
          "title": "Link",
          "type": "string",
          "single": true
        },
        {
          "name": "selection",
          "title": "Quote",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Diagram": {
      "description": "Mermaid.js diagram.",
      "body": [
        "{{< mermaid >}}",
        "[[&selection]]",
        "{{< /mermaid >}}"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "Diagram",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "HTML": {
      "description": "Raw HTML code.",
      "body": [
        "{{< rawhtml >}}",
        "[[&selection]]",
        "{{< /rawhtml >}}"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "HTML",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Newsletter template": {
      "description": "Newsletter template with headings and placeholders.",
      "body": [
        "## What's Happening?",
        "",
        "## Curated Links",
        "",
        "## Hot off the Press"
      ],
      "fields": [
        {
          "name": "selection",
          "title": "HTML",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    }
  }
}